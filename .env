# Backend configuration
DATABASE_URL=sqlite:///./cipherlink.db
BACKEND_SECRET=change-me-in-prod

# OTP / email delivery
BACKEND_MOCK_MODE=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=<YOUR_EMAIL>
SMTP_PASS=<PASS_FROM_ACCOUNT>
SMTP_FROM_EMAIL=SecureTerminal <YOUR_EMAIL>

# Frontend mock toggle (ensure this matches Vite)
VITE_MOCK_MODE=false
VITE_WS_URL=ws://localhost:8000/ws
VITE_API_URL=http://localhost:8000/api
# Allow localhost + LAN origins
ALLOWED_ORIGIN_REGEX=^https?://(localhost|127\.0\.0\.1|0\.0\.0\.0|192\.168\.\d+\.\d+)(:\d+)?$
